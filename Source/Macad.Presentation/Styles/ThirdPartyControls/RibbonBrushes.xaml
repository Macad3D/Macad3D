<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mmp="clr-namespace:Macad.Presentation">

    <SolidColorBrush x:Key="Macad.Brushes.Ribbon.Base100" Color="{mmp:AppResource Macad.Colors.Base80}" />
    <SolidColorBrush x:Key="Macad.Brushes.Ribbon.Base80" Opacity="0.8" Color="{mmp:AppResource Macad.Colors.Base80}" />
    <SolidColorBrush x:Key="Macad.Brushes.Ribbon.Base60" Opacity="0.6" Color="{mmp:AppResource Macad.Colors.Base80}" />
    <SolidColorBrush x:Key="Macad.Brushes.Ribbon.Base40" Opacity="0.4" Color="{mmp:AppResource Macad.Colors.Base80}" />
    <SolidColorBrush x:Key="Macad.Brushes.Ribbon.Base20" Opacity="0.2" Color="{mmp:AppResource Macad.Colors.Base80}" />
    <SolidColorBrush x:Key="Macad.Brushes.Ribbon.Base10" Opacity="0.1" Color="{mmp:AppResource Macad.Colors.Base80}" />

    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.AccentBase" ResourceKey="Macad.Brushes.Ribbon.Base100" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.AccentColor20" ResourceKey="Macad.Brushes.Ribbon.Base20" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.AccentColor40" ResourceKey="Macad.Brushes.Ribbon.Base40" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.AccentColor60" ResourceKey="Macad.Brushes.Ribbon.Base60" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.AccentColor80" ResourceKey="Macad.Brushes.Ribbon.Base80" />

    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.Highlight" ResourceKey="Macad.Brushes.Ribbon.Base100" />

    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.IdealForegroundColor" ResourceKey="Macad.Brushes.Black" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.IdealForegroundDisabled" Opacity="0.4" Color="{mmp:AppResource Macad.Colors.Black}" />

    <!-- RibbonTabControl -->
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.RibbonTabControl.Background" ResourceKey="Macad.Brushes.Window.Background" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.RibbonTabControl.Content.Background" ResourceKey="Macad.Brushes.Base15" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.RibbonTabControl.Content.Border" ResourceKey="Macad.Brushes.Base50" />
    
    <!-- RibbonTabItem -->
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.RibbonTabItem.Active.Background" ResourceKey="Macad.Brushes.Base15" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.RibbonTabItem.Border" ResourceKey="Macad.Brushes.Base50" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabItem.MouseOver.Foreground" Color="#274276" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonTabItem.Selected.MouseOver.Foreground" Color="#274276"  />

    <!-- RibbonContextualTabGroup -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.RibbonContextualTabGroup.Background.OpacityMask" Color="#20000000"  />

    <!-- Menu -->
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.Ribbon.Background" ResourceKey="Macad.Brushes.Window.Background" /> 
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.MenuItem.Background" ResourceKey="Macad.Brushes.Base10" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.GroupSeparator.Background" ResourceKey="Macad.Brushes.Base30" />
    
    <!-- Window -->
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.RibbonWindow.TitleBackground" ResourceKey="Macad.Brushes.Window.Background" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.WindowCommands.CaptionButton.MouseOver.Background" ResourceKey="Macad.Brushes.Ribbon.Base10" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.WindowCommands.CaptionButton.Pressed.Background" ResourceKey="Macad.Brushes.Ribbon.Base40" />

    <!-- Button -->
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.Button.MouseOver.Background" ResourceKey="Macad.Brushes.Ribbon.Base10" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.Button.MouseOver.Border" ResourceKey="Macad.Brushes.Ribbon.Base40" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.Button.Pressed.Background" ResourceKey="Macad.Brushes.Ribbon.Base20" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.Button.Pressed.Border" ResourceKey="Macad.Brushes.Ribbon.Base60" />

    <!-- ToggleButton -->
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.ToggleButton.Checked.Border" ResourceKey="Macad.Brushes.AccentDark" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.ToggleButton.Checked.Background" ResourceKey="Macad.Brushes.Accent" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.ToggleButton.CheckedMouseOver.Border" ResourceKey="Macad.Brushes.AccentDark" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.ToggleButton.CheckedMouseOver.Background" ResourceKey="Macad.Brushes.AccentLight" />

    <!-- GalleryItem -->
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.GalleryItem.Selected" ResourceKey="Macad.Brushes.Ribbon.Base40" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.GalleryItem.Pressed" ResourceKey="Macad.Brushes.Ribbon.Base60" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.GalleryItem.MouseOver" ResourceKey="Macad.Brushes.Ribbon.Base20" />

    <!-- DropDown -->
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.DropDown.Background" ResourceKey="Macad.Brushes.Base10" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.DropDown.Border" ResourceKey="Macad.Brushes.Base50" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.DropDown.Resize.Border" ResourceKey="Macad.Brushes.Base70" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.DropDown.Resize.Background" ResourceKey="Macad.Brushes.Base80" />
    
    <!-- ScreenTip -->
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.ScreenTip.Border" ResourceKey="Macad.Brushes.Base50" />
    <mmp:AppResource x:Key="Fluent.Ribbon.Brushes.ScreenTip.Background" ResourceKey="Macad.Brushes.Base10" />

</ResourceDictionary>